{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ES2020",
    "module": "CommonJS"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules"]
} 